<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextInputLayout-->
    <declare-styleable name="TextInputLayout">
        <!-- standard attributes, note android: prefix and no format attribute -->
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="android:fontFamily"/>
        <attr name="android:imeOptions"/>
        <attr name="android:maxLines"/>
        <attr name="android:lines"/>
        <attr name="android:inputType"/>
        <attr name="android:selectAllOnFocus"/>
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="android:layout" format="reference" />
        <attr name="android:text" />
        <attr name="android:textColor" format="reference|color" />
        <attr name="android:src" format="reference" />
        <attr name="android:background" format="reference|color" />
        <attr name="buttonText" format="string|reference" />
        <attr name="buttonTextColor" format="reference|color" />
        <attr name="buttonBgColor" format="reference|color" />
    </declare-styleable>

</resources>